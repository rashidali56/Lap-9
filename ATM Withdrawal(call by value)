#include <iostream>
using namespace std;

void attemptWithdraw(int balance, int amount) {
    cout << "Attempting withdrawalâ€¦" << endl;

    if (amount <= balance) {
        balance = balance - amount;
        cout << "Withdrawal successful. New balance inside function: "
             << balance << endl;
    } else {
        cout << "Withdrawal failed. Insufficient balance." << endl;
    }
}

int main() {
    int balance = 5000;
    int withdraw = 1200;

    attemptWithdraw(balance, withdraw);

    cout << "Balance in main: " << balance << endl;

    return 0;
}
